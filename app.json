{
  "expo": {
    "name": "Health Export For AI",
    "version": "1.1.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "connect-health-connect",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "package": "com.yhmr.healthexportforai",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.health.READ_STEPS",
        "android.permission.health.READ_TOTAL_CALORIES_BURNED",
        "android.permission.health.READ_WEIGHT",
        "android.permission.health.READ_BODY_FAT",
        "android.permission.health.READ_BASAL_METABOLIC_RATE",
        "android.permission.health.READ_SLEEP",
        "android.permission.health.READ_EXERCISE",
        "android.permission.health.READ_NUTRITION",
        "android.permission.health.READ_HEALTH_DATA_IN_BACKGROUND",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_DATA_SYNC",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK"
      ]
    },
    "plugins": [
      "expo-router",
      "@react-native-google-signin/google-signin",
      [
        "react-native-health",
        {
          "healthSharePermission": "AIによる健康データ分析のために歩数、睡眠、運動などのデータを取得します。",
          "healthUpdatePermission": "このアプリはヘルスケアへのデータ書き込みを行いません。"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 28,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-health-connect",
        {
          "permissions": [
            "android.permission.health.READ_STEPS",
            "android.permission.health.READ_TOTAL_CALORIES_BURNED",
            "android.permission.health.READ_WEIGHT",
            "android.permission.health.READ_BODY_FAT",
            "android.permission.health.READ_BASAL_METABOLIC_RATE",
            "android.permission.health.READ_SLEEP",
            "android.permission.health.READ_EXERCISE",
            "android.permission.health.READ_NUTRITION",
            "android.permission.health.READ_HEALTH_DATA_IN_BACKGROUND"
          ]
        }
      ],
      "expo-background-fetch",
      "expo-task-manager",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "SyncWidget",
              "label": "Sync Health (Wide)",
              "minWidth": "130dp",
              "minHeight": "57dp",
              "description": "Sync health data to Google Drive (Wide)",
              "previewImage": "./assets/widget-preview-wide.png"
            },
            {
              "name": "SyncWidgetSmall",
              "label": "Sync Health (Small)",
              "minWidth": "57dp",
              "minHeight": "57dp",
              "description": "Sync health data to Google Drive (Small)",
              "previewImage": "./assets/widget-preview-small.png"
            }
          ]
        }
      ],
      "./plugins/withWoAFix",
      "expo-localization"
    ],
    "extra": {
      "router": {}
    },
    "ios": {
      "bundleIdentifier": "com.yhmr.healthexportforai",
      "supportsTablet": false,
      "infoPlist": {
        "UIBackgroundModes": ["fetch"],
        "NSHealthShareUsageDescription": "AIによる健康データ分析のために歩数、睡眠、運動などのデータを取得します。",
        "NSHealthUpdateUsageDescription": "このアプリはヘルスケアへのデータ書き込みを行いません。",
        "ITSAppUsesNonExemptEncryption": false
      }
    }
  }
}
